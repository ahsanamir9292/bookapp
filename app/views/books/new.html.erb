<h1>Add a New Book</h1>
<%= form_for @book do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	</p>
		<p>
		<%= f.label :price %><br>
		<%= f.text_field :price %>
	</p>
		<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :name), include_blank: "Select Category") %>

	</p>
	<p>
		<%= f.label :image %>
		<%= f.file_field :image %>

	</p>
	<p>
		<%= f.submit "Add a New Post"%>
	</p>
<% end %>